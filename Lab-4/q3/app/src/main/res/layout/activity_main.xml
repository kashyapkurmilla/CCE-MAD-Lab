<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="273dp"
        android:layout_height="461dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.459">

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:text="Android 4.0-Ice Cream Sandwich"
            android:onClick="onButtonClick"
            android:tag="ice-cream"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:text="Android 4.1 - Jelly Bean"
            android:onClick="onButtonClick"
            android:tag = "JellyBean"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="79dp"
            android:text="Android 4.4 - KitKat"
            android:onClick="onButtonClick"
            android:tag = "Kitkat"/>

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:text="Android 5.0 - Lollipop"
            android:onClick="onButtonClick"
            android:tag = "lollipop"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>